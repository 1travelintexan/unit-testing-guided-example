{
  "name": "lab-unit-testing",
  "description": "Unit testing .",
  "version": "1.0.0",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watchAll"
  },
  "dependencies": {
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0"
  },
  "devDependencies": {
    "jest-html-reporter": "^3.3.0"
  },
  "jest": {
    "reporters": [
      "default",
      [
        "./node_modules/jest-html-reporter",
        {
          "pageTitle": "Test Report"
        }
      ]
    ]
  },
  "jest-junit": {
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}"
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "none"
  }
}
